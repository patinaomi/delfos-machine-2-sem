@model IEnumerable<Project.Models.Usuario>

<section class="p-5">

    <h2>Lista de Usu√°rios</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Telefone</th>
                <th>Email</th>
                <th>Senha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Nome</td>
                    <td>@usuario.CPF</td>
                    <td>@usuario.Telefone</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Senha</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group pt-3">
        <a asp-controller="Usuario" asp-action="Criar" class="btn btn-warning">Voltar</a>
        <a asp-controller="Usuario" asp-action="Criar" class="btn btn-primary">Criar</a>
        <a asp-controller="Usuario" asp-action="Atualizar" class="btn btn-primary">Atualizar dados</a>
        <a asp-controller="DadosCadastrais" asp-action="Consultar" class="btn " style="background-color: green; color: white;">Dados cadastrais</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary bg-green">Home</a>
    </div>

</section>