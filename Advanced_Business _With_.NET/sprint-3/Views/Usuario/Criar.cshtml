@model Project.Models.Usuario

@{
    ViewData["Title"] = "Cadastro de usuário";
}

<section class="d-flex p-3" style="height: 80vh">
   
    <div class="w-20 d-flex justify-content-center" style="height: 80vh; padding-right: 10px;">
        <div class="container-fluid border p-4 bg-white" style="min-height: 80vh; width: 60vh;">
            <h2 class="radley-regular">Cadastro</h2>
            <p class="carlito-regular">Seja bem vindo, estamos felizes com você aqui e saber que você deseja entrar neste novo mundo e ter uma saúde e qualidade de vida como nunca visto!</p>
            <form asp-action="Criar" method="post">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label radley-regular"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CPF" class="control-label radley-regular"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label radley-regular"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label radley-regular"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label radley-regular">Senha</label>
                    <input asp-for="Senha" class="form-control" type="password"/>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <input type="submit" class="btn" style="background-color: #9B4819; color: #fdf5e6;" />
                    <a asp-action="Consultar" class="btn" style="background-color: #bc885d; color: #fdf5e6;">Consultar</a>
                    <a asp-controller="Home" asp-action="Inicio" class="btn" style="background-color: #F4E1C1; color: #9B4819;">Voltar</a>
                </div>
            </form>

            <div class="mt-3">
                <p class="carlito-regular">Se você é clínica e deseja se cadastrar, temos um espaço ideal para os parceiros</p>
                <a asp-controller="Clinica" asp-action="Criar" class="btn" style="background-color: #F4E1C1; color: #9B4819;">Parceiros</a>
            </div>
        </div>

        
    </div>

    <!-- Container da Imagem ocupando 80% da largura e 100% da altura -->
    <div class="w-100" style="height: 80vh">
        <img src="~/assets/Cadastro/imagem.jpg" alt="Imagem de fundo para área de cadastro cliente" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
    </div>
    
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}